<?xml version="1.0" encoding="utf-8"?>

<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="7dp"
    android:elevation="15dp"
    app:cardCornerRadius="15dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:id="@+id/cardview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#356A7A"
        android:paddingLeft="25dp"
        android:paddingTop="10dp"
        android:paddingRight="0dp"
        android:paddingBottom="10dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/setscmimg"
            android:layout_width="220dp"
            android:layout_height="150dp"

            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="false"
            android:layout_gravity="center|center_vertical"
            android:layout_marginStart="68dp"
            android:layout_marginTop="70dp"
            android:foregroundGravity="center"
            android:padding="3dp"
            android:scaleType="centerCrop"
            android:src="@drawable/googleg_standard_color_18"

            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
            app:shapeAppearance="@style/roundrect"
            app:strokeColor="@color/blueshade1"
            app:strokeWidth="4dp"


            />

        <!--        <com.google.android.material.imageview.ShapeableImageView-->
        <!--            android:id="@+id/setscmimg"-->
        <!--            android:layout_width="200dp"-->
        <!--            android:layout_height="100dp"-->
        <!--            android:layout_marginLeft="60dp"-->
        <!--            android:layout_marginTop="400dp" />-->

        <TextView
            android:id="@+id/setscmtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_marginTop="22dp"
            android:layout_marginBottom="72dp"
            android:gravity="center"
            android:text="Title"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setscmdesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="false"
            android:layout_below="@id/setscmimg"
            android:layout_centerInParent="false"
            android:layout_centerHorizontal="false"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:text="desc"
            android:textAlignment="viewStart"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/deletescmbtn"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="305dp"
            android:layout_marginTop="70dp"
            android:clickable="true"
            app:rippleColor="#FF0000"
            app:srcCompat="@drawable/delete" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@id/setscmdesc"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="26dp"
            android:text="website link :"
            android:textAlignment="viewStart"
            android:textColor="#FFAB00"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/setscmurl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignWithParentIfMissing="true"
            android:layout_below="@id/setscmdesc"
            android:layout_alignParentStart="false"
            android:layout_alignParentLeft="false"
            android:layout_alignParentTop="false"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="false"
            android:layout_alignParentBottom="false"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="20dp"
            android:autoLink="web"
            android:text="kkkkk"
            android:textAllCaps="false"
            android:textColor="#00DDFF"
            android:textColorHighlight="#00DDFF"
            android:textColorLink="#00DDFF"
            android:textSize="18sp"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
